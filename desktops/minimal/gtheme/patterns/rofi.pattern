<[output-file]>=~/.config/rofi/config.rasi

configuration {
	modi:				"drun,emoji";
	font:				"<[default-font|Iosevka Nerd Font Mono]> 11";
	sidebar-mode:			false;
}

* {
        bg:                             #<[background]>;
        fg:                             #<[foreground]>;
        button:                         #<[green]>;
        ac:                             #<[green]>;
        background-color:               @bg;
        text-color:                     @fg;
}

window {
	transparency:                   "real";
	border-radius:			0px;
        width:                          35%;
	padding:			0px;
	border:				0px;
	border-color:			@fg;
	location:			center;
}

prompt {
	enabled:			false;
	horizontal-align:		0.5;
	vertical-align:			0.5;
	background-color:		@button;
	border:                         0px;
	border-color:                   @ac;
	border-radius: 0px;
	font:				"<[default-font|Iosevka Nerd Font Mono]> 20";
	padding:			0 1% 0;
}

entry {
	placeholder:			"Search";
	expand:                         true;
	padding:                        2%;
	background-color:               @button;
        placeholder-color:              @bg;
	text-color:			@bg;
	border:				0px;
	border-color:			@bg;
	border-radius: 0px;
	cursor:				text;
}

inputbar {
	children:			[ prompt, entry ];
	expand:                         false;
	spacing:			1%;
}

listview {
	columns:                        2;
	lines:	                        5;
	cycle:                          false;
	dynamic:                        true;
	layout:                         vertical;
}

mainbox {
	children:                       [ inputbar, listview ];
	spacing:			2%;
	padding:                        2% 1% 2% 1%;
	fixed-num-lines:		false;
}

element {
	orientation:                    vertical;
	border-radius: 0px;
	padding:			2% 3%;
}

element-text {
	expand:                         true;
	vertical-align:                 0.5;
	background-color:               inherit;
        text-color:                     inherit;
}

element selected {
	background-color:               @ac;
	text-color:                     @bg;
	border-radius: 0px;
}

listview, element, element selected, element-icon, element-text {
	cursor:				pointer;
}
